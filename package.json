{
  "name": "blog-hub",
  "version": "1.0.0",
  "description": "",
  "main": "index.tsx",
  "scripts": {
    "start": "concurrently \"webpack serve --env port=3000\" \"npm run server\"",
    "build": "webpack --env mode=production",
    "dev": "webpack --env mode=development",
    "lint": "eslint \"**/*.{ts, tsx}\"",
    "lint:fix": "eslint \"**/*.{ts, tsx}\" --fix",
    "lint:scss": "npx stylelint \"**/*.scss\"",
    "lint:scss:fix": "npx stylelint \"**/*.scss\" --fix",
    "test:unit": "jest --config ./config/jest/jest.config.ts",
    "test:loki": "npx loki test",
    "test:loki:ci": "npm run storybook:build && npx loki update --requireReference --reactUri file:./storybook-static",
    "test:loki:approve": "npx loki approve",
    "prepare": "husky install",
    "prettier:code": "prettier --write \"*/**/*.{js,ts,jsx,tsx}\"",
    "storybook": "start-storybook -p 6006 -c ./config/storybook",
    "storybook:build": "build-storybook -c ./config/storybook",
    "server": "node ./json-server/index.js --port 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lavicante/blog-hub.git"
  },
  "author": "kemal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lavicante/blog-hub/issues"
  },
  "homepage": "https://github.com/lavicante/blog-hub#readme",
